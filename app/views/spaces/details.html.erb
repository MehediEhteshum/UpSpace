<div class="steps mb-5">
  <div class="step-item is-completed">
    <div class="step-marker">
      <span class="icon">
        <i class="fa fa-check"></i>
      </span>
    </div>
    <div class="step-details">
      <p class="step-title">Payment</p>
    </div>
  </div>
  <div class="step-item is-active">
    <div class="step-marker">
      <span class="icon">
        <i class="fas fa-pencil-alt"></i>
      </span>
    </div>
    <div class="step-details">
      <p class="step-title">Details</p>
    </div>
  </div>
  <div class="step-item">
    <div class="step-marker">3</div>
    <div class="step-details">
      <p class="step-title">Review</p>
    </div>
  </div>
  <div class="step-item">
    <div class="step-marker">
      <span class="icon">
        <i class="fa fa-flag"></i>
      </span>
    </div>
    <div class="step-details">
      <p class="step-title">Done</p>
    </div>
  </div>
</div>

<div class="columns">
  <div class="column is-two-thirds">
    <div class="columns is-multiline">
      <div class="column is-fullwidth">
        <div class="card">
          <div class="card-content">
            <div class="content">
              <p class="title is-4">Describe your event</p>
              <p class="subtitle is-5">Include any special requests you have</p>
            </div>
            <div class="content">
              <%= form_for @reservation do |f| %>
                <%= f.text_area :description, placeholder: "Your host will see this when reviewing your request", class: "textarea" %>
                <div class="column has-text-centered">
                  <%= f.submit "Continue", class: "button is-danger"%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'reservation_summary' %>
</div>
