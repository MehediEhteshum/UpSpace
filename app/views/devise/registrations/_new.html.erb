<div id="modaldeviseregister" class="modal animated faster">
  <div class="modal-background"></div>
  <div class="modal-card">
    <section class="modal-card-body">
      <div class="columns is-mobile is-centered">
        <div class="column is-three-quarters has-text-centered is-centered">
          <p class="title is-2">Sign Up</p>
          <span>Already have an account? <%= link_to 'Log In', "#", "data-target"=>"modaldeviselogin", "data-toggle"=>"modaldeviseregister", class:"modal-button" %></span>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="field has-text-left">
              <label class="label">Name</label>
              <div class="control">
                <%= f.text_field :fullname, autofocus: true, placeholder: "Your Name", class: "input" %>
              </div>
            </div>
            <div class="field has-text-left">
              <label class="label">Phone Number</label>
              <div class="control">
                <%= f.phone_field :phone_number, placeholder: "Your Phone Number", class: "input" %>
              </div>
            </div>
            <div class="hidden">
              <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>
            <div class="field has-text-left">
              <label class="label">Email Address</label>
              <div class="control">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
              </div>
            </div>
            <div class="field has-text-left">
              <label class="label">Password</label>
              <div class="control">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>
            <div class="field has-text-left">
              <label class="label">How did you hear about upSpace?</label>
              <div class="control">
                <div class="select is-fullwidth">
                  <%= f.select :found_us, [["Google", "Google"], ["Facebook", "Facebook"], ["Instagram", "Instagram"], ["Kijiji", "Kijiji"], ["LinkedIn", "LinkedIn"], ["TV", "TV"],
                  ["Radio", "Radio"], ["Word of Mouth", "Word of Mouth"], ["Other", "Other"]], { include_blank: "Select" }, required: true %>
                </div>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label class="checkbox">
                  <%= f.check_box :terms_agreement %> I agree to the <%= link_to "Terms and Conditions", terms_path, target: "_blank" %>
                </label>
              </div>
            </div>

            <div class="field">
              <div class="control has-text-centered">
                <%= f.submit "Sign Up", class: "button is-danger mt-3" %>
              </div>
            </div>

          <% end %>

          <p class="y-3">or</p>

          <%= link_to "Sign Up with Facebook", user_facebook_omniauth_authorize_path, class: "button is-facebook" %>

        </div>
      </div>
    </section>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
