<div class="columns y-20">
  <div class="column is-4 is-offset-4 has-text-centered">
    <p class="title is-4">Forgot your password?</p>
    <p>Enter your email address below.</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/devisemes' %>
      <div class="field">
        <div class="control">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input mt-5" %>
        </div>
      </div>
      <%= f.submit "Send reset instructions", class: "button is-danger" %>
    <% end %>
  </div>
</div>
