
<%= simple_form_for(@space_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :date_request %>
    <%= f.input :time_request %>
    <%= f.input :description %>
    <%= f.input :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<style>
  .form-inputs .input{
    padding: 40px;
  }
  
  .form-inputs .input input,
  .form-inputs .input textarea{
    width: 100%;
    margin: 10px;
  }
</style>