<div class="columns">

  <div class="column is-2">
    <%= render 'admin_menu' %>
  </div>

  <div class="column is-10">
    <div class="has-text-centered"><h2 class="title is-2">Email Templates</h2></div>

    <div class="columns">
      <div class="column is-one-third">
        <%= link_to "Preview User Welcome Email", send_test_user_welcome_email_path(), class: "button" %>
      </div>
      <div class="column is-one-third">
        <%= @user_welcome_recipient %>
      </div>
      <div class="column is-one-third">
        Sent when a user confirms their email address.
      </div>
    </div>

    <div class="columns">
      <div class="column is-one-third">
        <%= link_to "Preview Lister Review Request", send_test_lister_review_request_email_path(), class: "button" %>
      </div>
      <div class="column is-one-third">
        <%= @lister_review_recipient %>
      </div>
      <div class="column is-one-third">
        Sent the day after a confirmed booking ends.
      </div>
    </div>

    <div class="columns">
      <div class="column is-one-third">
        <%= link_to "Preview Renter Review Request", send_test_renter_review_request_email_path(), class: "button" %>
      </div>
      <div class="column is-one-third">
        <%= @renter_review_recipient %>
      </div>
      <div class="column is-one-third">
        Sent the day after a confirmed booking ends.
      </div>
    </div>

    <div class="columns">
      <div class="column is-one-third">
        <%= link_to "Preview Lister Booking Reminder", send_test_lister_booking_reminder_email_path(), class: "button" %>
      </div>
      <div class="column is-one-third">
        <%= @lister_booking_reminder_recipient %>
      </div>
      <div class="column is-one-third">
        Sent within 48 hours of when a booking starts.
      </div>
    </div>

    <div class="columns">
      <div class="column is-one-third">
        <%= link_to "Preview Renter Booking Reminder", send_test_renter_booking_reminder_email_path(), class: "button" %>
      </div>
      <div class="column is-one-third">
        <%= @renter_booking_reminder_recipient %>
      </div>
      <div class="column is-one-third">
        Sent within 48 hours of when a booking starts.
      </div>
    </div>


  </div>

</div>
