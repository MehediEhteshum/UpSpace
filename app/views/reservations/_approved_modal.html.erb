<%= link_to 'Approved', "#", "data-target"=>"modalDeviseApproved", "data-toggle"=>"modal", class: "button is-primary is-light is-fullwidth mb-1 modal-button" %>

<div id="modalDeviseApproved" class="modal animated faster">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head center-content">
      <p class="title is-2">Approved Listing</p>
    </header>
    <section class="modal-card-body">
      <div class="columns is-mobile is-centered">
        <div class="column is-three-quarters has-text-centered is-centered">
            <div class="field">
              <div class="control has-text-centered">
                <p>You approved this listing on <%= reservation.authorized_at.in_time_zone(current_user.time_zone).strftime('%h %d, %G %r') %></p>
              </div>
            </div>
        </div>
      </div>
    </section>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
